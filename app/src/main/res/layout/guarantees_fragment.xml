<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.GuaranteesFragment">
        
        
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/header_text"
            android:layout_margin="24dp"
            android:text="Choose Guarantees Type"/>

        <Spinner
            android:id="@+id/guarantees_spinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/txt"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>


        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/header_text"
            android:layout_margin="24dp"
            android:layout_below="@id/guarantees_spinner"
            android:text="Choose RoudSide Type"/>

        <Spinner
            android:id="@+id/roadSide_spinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/txt2"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>



        <TextView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="Next"
            android:textSize="16dp"
            android:layout_alignParentEnd="true"
          android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</layout>